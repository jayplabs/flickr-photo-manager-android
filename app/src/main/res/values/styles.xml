<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme"></style>

    <style name="AppTheme.Fullscreen" parent="Base.AppTheme"></style>

    <style name="Application_Theme" parent="Base.AppTheme">
        <item name="android:windowBackground">@color/text_color_bright</item>
    </style>

    <style name="ThemeBright" parent="Base.AppTheme">
        <item name="android:windowBackground">@color/app_effect_color_light</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/app_effect_color_light</item>
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryDark">@color/app_primary_color_dark</item>
        <item name="colorAccent">@color/app_primary_color</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="textAllCaps">false</item>

        <item name="actionOverflowMenuStyle">@style/Theme.PopupMenu</item>
    </style>

    <!-- Toolbar popup menu style -->
    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/text_color_dark</item>
        <item name="android:background">@color/text_color_bright</item>
    </style>
    <style name="Theme.PopupMenu" parent="AlertDialog.AppCompat.Light">
        <item name="android:popupBackground">@color/text_color_bright</item>
    </style>

    <!-- Toolbar style -->
    <style name="app_custom_toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/app_primary_color</item>
        <item name="android:textColor">@color/app_primary_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Custom dialog -->
    <style name="CustomDialogLoading" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- No data view style -->
    <style name="app_no_data_view_style">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">@dimen/font_no_data_view</item>
        <item name="android:layout_marginTop">@dimen/no_data_view_margin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- App text view style -->
    <style name="app_text_view_primary_large">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/app_primary_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="app_text_view_primary_medium">
